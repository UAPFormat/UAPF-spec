{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.uapf.org/uapf-a2a-schemas.schema.json",
  "title": "UAPF A2A Schemas",
  "description": "Defines agent-to-agent messaging schemas used for coordination.",
  "type": "object",
  "properties": {
    "schemas": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the message schema."
          },
          "name": {
            "type": "string",
            "description": "Human readable schema name."
          },
          "description": {
            "type": "string",
            "description": "Purpose and usage notes for the schema."
          },
          "messageType": {
            "type": "string",
            "description": "Type of message, e.g., request, response, event."
          },
          "payloadSchema": {
            "type": "object",
            "description": "JSON Schema describing the payload structure.",
            "additionalProperties": true
          },
          "requiredRoles": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Roles required to send or receive this message."
          },
          "metadata": {
            "type": "object",
            "description": "Additional metadata such as routing or security tags.",
            "additionalProperties": true
          }
        },
        "required": [
          "id",
          "name",
          "messageType",
          "payloadSchema"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "schemas"
  ],
  "additionalProperties": false
}
